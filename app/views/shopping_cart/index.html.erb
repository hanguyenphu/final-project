<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
 <%=render partial: 'navigation/nav'%>

 <main class="mdl-layout__content">
 <div class="mdl-grid" >
   <h4 class="mdc-typography--headline4"><i class="material-icons">
    shopping_cart
    </i> Shopping Cart</h4>

 </div>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">Feature</div>
    <div class="mdl-cell mdl-cell--2-col">Quantity</div>
    <div class="mdl-cell mdl-cell--2-col">Price</div>
    <div class="mdl-cell mdl-cell--1-col">Total</div>
     <div class="mdl-cell mdl-cell--1-col">Edit</div>

    <div class="mdl-cell mdl-cell--1-col">Remove</div>
</div>
<ol>

<% @features.each do |feature|%>
<li>
<form method="POST" >
  <div class="mdl-grid" >
      <div class="mdl-cell mdl-cell--4-col"><%=feature.name%></div>
      <div class="mdl-cell mdl-cell--2-col">
          <input class="mdl-textfield__input" type="number" readonly min=1 name="quality" value=<%=@cart["#{feature.id}"]%> style="width:50%">
          <input  type="hidden" value=<%=feature.id%>>
      </div>
      <div class="mdl-cell mdl-cell--2-col">$<%=feature.price%></div>
      <div class="mdl-cell mdl-cell--1-col">$<%=feature.price.to_f * @cart["#{feature.id}"].to_f %></div>

      <div class="mdl-cell mdl-cell--1-col"><a href="/feature/<%=feature.id%>" style="color:blue"><i class="material-icons">edit</i></a></div>
      <div class="mdl-cell mdl-cell--1-col"><a href="#" style="color:red"><i class="material-icons">delete_forever</i></a></div>
  </div>
</form>
<br/>
</li>
<% end %>

</ol>
<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" style="margin-left: 30px;">
  Process To Checkout <i class="material-icons">
    arrow_forward
</i>
</button>



 </main>

 </div>